{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
    <h1>Company index</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Corporate_name</th>
                <th>Street</th>
                <th>Postal_code</th>
                <th>City</th>
                <th>Siret_number</th>
                <th>Phone_number</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.corporateName }}</td>
                <td>{{ company.street }}</td>
                <td>{{ company.postalCode }}</td>
                <td>{{ company.city }}</td>
                <td>{{ company.siretNumber }}</td>
                <td>{{ company.phoneNumber }}</td>
                <td>
                    <a href="{{ path('company_show', {'id': company.id}) }}">show</a>
                    <a href="{{ path('company_edit', {'id': company.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('company_new') }}">Create new</a>
{% endblock %}
